{
  "language_servers": [
    "!typescript-language-server",
    "!eslint",
    "!prettier",
    "vtsls",
    "biome",
    "..."
  ],
  "vim_mode": true,
  "relative_line_numbers": true,
  "theme": {
    "mode": "system",
    "light": "Catppuccin Latte",
    "dark": "Catppuccin Mocha"
  },
  "scroll_beyond_last_line": "vertical_scroll_margin",
  "buffer_font_family": "ComicShannsMono Nerd Font",
  "ui_font_family": "ComicShannsMono Nerd Font",
  "ui_font_size": 18,
  "buffer_font_size": 18,
  "soft_wrap": "editor_width",
  "file_scan_exclusions": ["**/.DS_Store", "**/.git", ".idea", ".data"],
  "copilot": {
    "disabled_globs": [".env"],
    "button": false
  },
  "tabs": {
    "git_status": true
  },
  "tab_bar": {
    "show": true
  },
  "file_types": {
    "Dockerfile": ["Dockerfile", "Dockerfile.*"]
  },
  "assistant": {
    "dock": "right",
    "default_model": {
      "provider": "copilot_chat",
      "model": "gpt-4o"
    },
    "version": "2",
    "button": true,
    "enabled": true
  },
  "chat_panel": {
    "enabled": false,
    "button": false
  },
  "collaboration_panel": {
    "enabled": false,
    "button": false
  },
  "when_closing_with_no_tabs": "keep_window_open"
}
